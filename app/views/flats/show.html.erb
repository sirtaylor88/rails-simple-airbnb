<div class="banner">
  <img src=<%="#{@flat.picture_url}"%>>
</div>

<div class="d-flex justify-content-between">
  <div class="container">
    <div class="border m-3 p-3">
      <h1><%= @flat.name %></h1>
      <p><%= @flat.address %></p>
    </div>
    <div class="border m-3 p-3">
      <h2><strong>A bit morea bout this flat...</strong></h2>
      <p><%= @flat.description %></p>
    </div>
  </div>

  <div class="container" style="width: 480px">
    <div class="border m-3 p-3">
      <h3>Book this place!</h3>
      <form action="#" method="POST">
        <div class="d-flex border p-3 m-3 align-items-center">
          <label for="check-in" class="px-3">From:</label>
          <input type="date" class="form-control" id="check-in" name="check-in">
        </div>
        <div class="d-flex border p-3 m-3 p-3 align-items-center">
          <label for="check-out" class="px-3">To:</label>
          <input type="date" class="form-control" id="check-out" name="check-out">
        </div>
        <div class="container text-center">
          <input type="submit" class="btn btn-success w-100" value="Book">
        </div>
      </form>
    </div>
    <div class="border m-3 p-3">
      <h3>Details</h3>
      <div class="d-flex p-3 m-3" style="font-size: 24px;">
        <div>
          <i class="fas fa-user-friends"> <%= @flat.number_of_guests %> </i>
        </div>
        <pre><%= " " * 4 %></pre>
        <div>
          <i class="fas fa-euro-sign"> <%= @flat.price_per_night %> </i>
        </div>
      </div>
    </div>
    <div class="border m-3 p-3">
      <div class="d-flex justify-content-between">
        <h4 class="align-self-center">Share</h4>
        <div style="font-size: 36px;">
          <i class="fab fa-facebook-square"></i>
          <i class="fab fa-twitter-square"></i>
          <i class="fab fa-pinterest-square"></i>
          <i class="fas fa-envelope-square"></i>
        </div>
        </div>
      </div>
    </div>
  </div>
</div>

