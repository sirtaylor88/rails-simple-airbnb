<d class="d-flex justify-content-between" style="margin-top: 16px">
  <div class="container text-left">
    <h3>Simple Airbnb</h3>
  </div>
  <div class="container text-right">
    <form action="search" method="POST">
      <input type="text" placeholder="Search" style="padding: 4px">
      <%= link_to "Search", search_path, class: "btn btn-success" %>
      <%= link_to "Add Flat", new_flat_path, class: "btn btn-primary" %>
    </form>
  </div>
</d>
<hr>
<div class="container">
  <h1>All our Flats</h1>
  <p>You searched for . We found <%= @flats.size %> flats out of our <%= @flats.size %> on our website.</p>
  <div class="container">
    <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-4 justify-content-around">
        <img style="width: 100%" src=<%="#{flat.picture_url}"%>>
        <div class="col-12 mb-3 border">
          <div class="container mt-3">
            <h2><%= flat.name %></h2>
            <p><%= flat.address %></p>
          </div>
          <div class="d-flex justify-content-around" style="font-size: 24px; font-weight: bold">
            <div>
              <i class="fas fa-user-friends"> <%= flat.number_of_guests %> </i>
            </div>
            <div>
              <i class="fas fa-euro-sign"> <%= flat.price_per_night %> </i>
            </div>
          </div>

          <div class="container  mt-3">
            <div class="d-flex justify-content-around py-3">
              <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
              <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-warning" %>
              <%= link_to "Remove", flat_path(flat), method: :delete, data: { confirm: "Delete #{flat.name}" }, class: "btn btn-danger" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
    </div>
  </div>
</div>
